<section id="contact" class="contact">

    <div class="container" data-aos="fade-up">

        <header class="section-header">
            <h2>Kontakt</h2>
            <p>Kontaktformular</p>
        </header>

        <div class="row gy-4" data-aos="fade-up" data-delay="100">
            <div id="mycustom">
                <EditForm Model="@Email" OnValidSubmit="@TaskSendEmail" class="php-email-form" id="mycustom">
                    <div class="row gy-4">

                        <div class="col-md-6">
                            <InputText id="name" @bind-Value="Email.Name" type="text" name="name" class="form-control" placeholder="Ihr Name" required />
                        </div>

                        <div class="col-md-6 ">
                            <InputText type="email" @bind-Value="Email.Email" class="form-control" name="email" placeholder="Email" required />
                        </div>

                        <div class="col-md-12">
                            <InputText type="text" @bind-Value="Email.Subject" class="form-control" name="subject" placeholder="Betreff" required />
                        </div>

                        <div class="col-md-12">
                            <InputTextArea @bind-Value="Email.Message" class="form-control" name="message" rows="6" placeholder="Nachricht" required />
                        </div>

                        <div class="col-md-12 text-center">
                            @if (Email.IsSent != null)
                            {
                                @if (Email.IsSent == true)
                                {
                                    <div class="sent-message">Ihre Nachricht wurde gesendet</div>
                                }
                                else
                                {
                                    <div class="error-message">Es ist ein Fehler aufgetreten</div>
                                }

                            }

                            <button type="submit">Senden</button>
                        </div>

                    </div>
                </EditForm>

            </div>

        </div>

    </div>

</section><!-- End Contact Section -->