@using BlazorServer.Components
@using SharedLibrary.Dtos
@inject IJSRuntime JSRuntime
@using Microsoft.AspNetCore.Components;


<!-- ======= Frontend Section ======= -->
@if (SectionComponentItem != null)
{


    <section id="@(SectionComponentItem.SectionComponentProjectsHtmlId ?? "")" class="solution">
        <div class="container" data-aos="fade-up">

            <header class="section-header">
                <h2>@SectionComponentItem.Title</h2>
                <p>@SectionComponentItem.Description</p>
            </header>

            <div class="row align-items-center">

                @foreach (SectionComponentProjectDto item in SectionComponentItem.SectionComponentProjects)
                {
                    <div class="col-xl-6 mt-3" data-aos="fade-up" data-aos-delay="100">
                        <div class="box pb-3">
                            <div class="slider">
                                <a href=@item.SliderImagesBase64Data[item.ImageOnDisplayIndex]>
                                    <img src=@item.SliderImagesBase64Data[item.ImageOnDisplayIndex] class="my-img" data-aos="fade-up" alt="">
                                </a>
                                <button @onclick="() => PrevImage(item)" class="arrow prev">&#10094;</button>
                                <button @onclick="() => NextImage(item)" class="arrow next">&#10095;</button>
                            </div>
                            <h3 class="mt-3">@item.Title</h3>
                            <p>
                                @(new MarkupString(item.Description))
                            </p>
                        </div>
                    </div>
                }
            </div>

            <div class="container aos-init aos-animate icons">
                <div class="col-md-12 text-center">
                    <div class="social-links mt-3">
                        @if (SectionComponentItem.Icons != null)
                        {
                            foreach (SectionComponentIconDto icon in SectionComponentItem.Icons)
                            {
                                <a href=@(new MarkupString(icon.LinkData)) target="_blank"
                                   rel="noreferrer"><img src=@(new MarkupString(icon.IconsBase64Data)) alt="Blazor" width="60" height="60" /></a>
                            }

                        }
                    </div>
                </div>

            </div>
        </div>





    </section>

    <!-- End Frontend Section -->
}
